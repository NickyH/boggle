.row#auth_token{:'data-auth-token' => form_authenticity_token}

#topspacer.hide-for-small

.row.toprowmain.header
  .large-3.columns
  .large-6.small-6.columns.large-centered.header
    .tile= 'B'
    .tile= 'O'
    .tile= 'G'
    .tile= 'G'
    .tile= 'L'
    .tile= 'E'
    / .mysubhead= 'Play boggle with your friends online'
.row.bottomrow.header
  .large-12.small-12.columns
    .row
      - if @auth.nil?
        .large-4.columns
        .large-4.columns.large-centered
          = link_to('Register', new_user_path, :remote => true, :class => 'button homebuttons')
          = link_to('Login', login_path, :remote => true, :class => 'button homebuttons')
        .large-4.columns

      - else
        .small-3.columns
        .small-6.columns.large-centered
          = link_to(@auth.username + "'s Games", games_path, :class => 'button homebuttons adj')
          = link_to('Logout', login_path, :method => 'post', :class => 'button homebuttons')
        .small-3.columns
  .rulelink= link_to('>', '/rules', :remote => true)
  .large-12.columns
    .row
      #form
      #rules




  #nav
    = render :partial => 'layouts/nav'


  - if @auth.nil?
    #drop.f-dropdown.content
      = render :partial => 'session/form'


