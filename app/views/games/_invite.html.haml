#formin
  .row
    .large-4.columns
    .large-4.columns.large-centered
      = form_tag sendtxt_path, :method => 'post', :remote => true do
        = label_tag "Friend's name"
        = text_field_tag 'name', nil, :autofocus => true, :class => 'formback'
        = label_tag "Friend's phone"
        = text_field_tag 'phone', nil, :class => 'formback'
        = hidden_field_tag 'game', @game.name
        = link_to 'Cancel', '#', :'data-clear-form' => true, :class =>  'button cancel'
        = submit_tag 'Enter', :class =>  'button loginbutton'
    .large-4.columns