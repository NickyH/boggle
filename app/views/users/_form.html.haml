#formin
  .row
    .large-4.columns
    .large-4.columns.large-centered
      =render(:partial => 'shared/errors', :locals => {:object => @user})
      = form_for @user, :url => users_path, :remote => true do |f|
        = f.label :username
        = f.text_field :username, :class => 'formback'
        = f.label :email
        = f.text_field :email, :class => 'formback'
        = f.label :password
        = f.password_field :password, :class => 'formback'
        = f.label :password_confirmation
        = f.password_field :password_confirmation, :class => 'formback'
        = link_to 'Cancel', '#', :'data-clear-form' => true, :class =>  'button cancel'
        = f.submit 'Register', :class =>  'button submit'
    .large-4.columns

